<%= form_for @service,:html => { :multipart => true, :class =>'form-horizontal'} do |f| %>
  <div class = "row">
    <div class = "well">
      
      <div class = "row">
        <%=f.hidden_field :user_id, :value => f.object.user_id%>
        <%=f.hidden_field :custom_service, :value => f.object.custom_service%>
      </div>
      
      <!-- Service Description -->
      <div class = "row">
        <div class = "col-md-12 col-sm-12 col-lg-12">
          <div class="form-group">
            <%=f.label :service_description, "Description", class: 'col-md-2 col-sm-2 col-lg-2 control-label'%>
            <div class = "col-sm-8 col-md-8 col-lg-8">
              <%= f.text_field :service_description,class: "form-control input-sm text-left" %>
            </div>
          </div>
        </div>  
        
      </div>
      <!-- Service Type -->
      <div class = "row">
        <div class = "col-md-6 col-sm-6 col-lg-6">
          <div class="form-group">
            <%=f.label :service_type, "Applies To", class: 'col-md-4 col-sm-4 col-lg-4 control-label'%>
            <div class = "col-sm-6 col-md-6 col-lg-5">
              <%= f.select(:service_type, [["Accounting",2],["Tax",3],["Both",1]],{},{:class =>"form-control text-left input-sm"}) %>
            </div>
          </div>
        </div>  
        
      </div>
      
    </div>    
    
   
  
  <div class = "row">
    
      <div class = "col-md-2 col-sm-2 col-lg-2">
        <%= f.submit "Save Changes" , class: 'btn btn-primary btn-block', :name => "submit" %>
      </div>

    <div class = "col-md-2 col-sm-2 col-lg-2">
     <%= link_to "Return" , available_services_path , class: 'btn btn-primary btn-block'%>
     </div>
  </div>
  <br>
</div> 
  

<%end%>   
