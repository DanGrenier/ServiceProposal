<%= form_for proposal_setting,:html => { :multipart => true, :class =>'form-horizontal'} do |f| %>
  <div class = "row">
    <div class = "well">
            
      <!-- RETURN EMAIL -->
      <div class = "row">
        
        <div class = "col-md-6 col-sm-6 col-lg-6">
          <div class="form-group">
            <%=f.label :return_email, "Return email address", class: 'col-md-4 col-sm-4 col-lg-4 control-label'%>
            <div class = "col-sm-8 col-md-8 col-lg-8">
              <%= f.text_field :return_email,:class =>"form-control text-left input-sm"  %>
            </div>
          </div>
        </div>  
      </div>

      
    </div>
    
    <h3>Tiered Pricing Setup</h3>    
    <div class = "well">
      <div class = "row">
        <div class = "col-md-12 col-sm-12 col-lg-12">
          <h5 align="left">Name your pricing tiers below. Suggestions (Bronze - Silver - Gold) (Basic - Standard - Premium) (Basic - Pro - Plus) </h5>
        </div>
      </div>
      <div class = "row">
      <br>
      </div>     
      <div class = "row">
        <div class = "col-md-4 col-sm-4 col-lg-4">
          <div class="form-group">
            <%=f.label :tier1_name, "Tier 1", class: 'col-md-3 col-sm-3 col-lg-3 control-label'%>
            <div class = "col-sm-5 col-md-5 col-lg-5">
              <%= f.text_field :tier1_name,:class =>"form-control text-left input-sm"  %>
            </div>
          </div>
        </div>  
         

        
      </div>

      <div class = "row">
        <div class = "col-md-4 col-sm-4 col-lg-4">
          <div class="form-group">
            <%=f.label :tier2_name, "Tier 2", class: 'col-md-3 col-sm-3 col-lg-3 control-label'%>
            <div class = "col-sm-5 col-md-5 col-lg-5">
              <%= f.text_field :tier2_name,:class =>"form-control text-left input-sm"  %>
            </div>
          </div>
        </div>  
      </div>

      <div class = "row">
        <div class = "col-md-4 col-sm-4 col-lg-4">
          <div class="form-group">
            <%=f.label :tier3_name, "Tier 3", class: 'col-md-3 col-sm-3 col-lg-3 control-label'%>
            <div class = "col-sm-5 col-md-5 col-lg-5">
              <%= f.text_field :tier3_name,:class =>"form-control text-left input-sm"  %>
            </div>
          </div>
        </div>  
        <div class = "col-md-4 col-sm-4 col-lg-4">
          
        </div>  

        
      </div>


    </div>
    <h3>Default Proposal Text</h3>
    
    <div class = "well">
      <div class = "row">  
        <div class = "col-sm-12 col-md-12 col-lg-12">
          <%= f.text_area(:proposal_default_text, size: '50x10', :style=>"resize: none;", :class =>"form-control text-left input-sm" ) %>
        </div>
      </div>
    </div>  
   
  
    

  
    <div class = "col-md-2 col-sm-2 col-lg-2">
      <%= f.submit "Save Changes" , class: 'btn btn-primary btn-block', :name => "submit" %>
    </div>

    <div class = "col-md-2 col-sm-2 col-lg-2">
      <%= link_to "Return" , root_path , class: 'btn btn-primary btn-block'%>
    </div>
  
 </div>
 <br>

<%end%>   
